{
  "rules": {
    "prettier/prettier": [
      "error",
      { "trailingComma": "none", "singleQuote": true }
    ]
  },
  "extends": [
    "standard",
    "standard-react",
    "standard-jsx",
    "prettier",
    "prettier/react"
  ],
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  # "ecmaFeatures": {
  #   "jsx": true
  # },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["prettier", "react"],
  "parser": "babel-eslint"
}
